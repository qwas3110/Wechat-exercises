<view class="container">


  <view class="header"> 
  <v-episode
    class="episode"
    index="{{classic.index}}"
  />


  <v-like 
    class="like"
    count="{{ likeCount }}"
    like="{{ likeStatus }}"
    bind:like="onLike"
  />
 
</view>

 <v-movie
    img="{{classic.image}}"
    content="{{classic.content}}"
  />

  <v-navi
    class="navi"
    title="{{classic.title}}"
    first="{{first}}"
    latest="{{latest}}"
    bind:left="onNext"
    bind:right="onPrevious"
  />

</view>



 